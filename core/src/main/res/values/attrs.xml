<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ConditionEditTextView">
        <attr name="minInput" format="integer" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
        <attr name="fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="VerifyCode">
        <attr name="codeTextSize" format="dimension" />
        <attr name="codeBackground" format="color" />
        <attr name="codeLength" format="integer" />
        <attr name="isContainChar" format="boolean" />
        <attr name="pointNum" format="integer" />
        <attr name="linNum" format="integer" />
    </declare-styleable>


    <declare-styleable name="RatingBar">
        <attr name="progress" format="reference" />
        <attr name="secondProgress" format="reference" />
        <attr name="horizontal_space" format="dimension" />
        <attr name="number_rating" format="integer" />
        <attr name="rating" format="integer" />
        <attr name="un_touch" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MarqueeView">
        <attr name="interval" format="integer" />
        <attr name="showPage" format="boolean" />
        <attr name="pageOrientation" format="enum">
            <enum name="HORIZONTAL" value="0" />
            <enum name="VERTICAL" value="1" />
        </attr>
        <attr name="pageLocation" format="enum">
            <enum name="top_left" value="0" />
            <enum name="top_center" value="1" />
            <enum name="top_right" value="2" />
            <enum name="center_left" value="3" />
            <enum name="center" value="4" />
            <enum name="center_right" value="5" />
            <enum name="bottom_left" value="6" />
            <enum name="bottom_center" value="7" />
            <enum name="bottom_right" value="8" />
        </attr>
    </declare-styleable>
</resources>